<h1>Your Refugee Restore Donation Has Been Received</h1>

<h3>Thank you, <%= @user.username %>!</h3>

  <% @supplies.each do |cart_item| %>
  <% if cart_item["class_type"] != "Loan" %>
    <table class="table">
      <tr>
        <th>Supply</th>
        <th>Description</th>
        <th>Value</th>
        <th>Quantity</th>
        <th>Subtotal</th>
      </tr>
      <tr>
        <td><%= cart_item.name %></td>
        <td><%= cart_item.description %></td>
        <td><%= number_to_currency(cart_item.value) %></td>
        <td><%= cart_item.supply_item_quantity %></td>
        <td><%= number_to_currency(cart_item.value * cart_item.supply_item_quantity.to_i)%></td>
      </tr>
    </table>
  <% else %>
  <table class="table">
    <tr>
      <th>Loan</th>
      <th>Description</th>
      <th>Value</th>
      <th>Amount Pledged</th>
      <th>Subtotal</th>
    </tr>
    <tr>
      <td><%= cart_item.purpose %></td>
      <td><%= cart_item.description %></td>
      <td><%= number_to_currency(cart_item.requested_amount) %></td>
      <td><%= cart_item.quantity %></td>
      <td><%= number_to_currency(cart_item.quantity.to_i)%></td>
    </tr>
  </table>
  <% end %>
<% end %>

<h2>Total: <%= number_to_currency @total_price %> </h2>

<p>
  To see your past orders, view your <%= link_to "Refugee Restore Dashboard", @dashboard_url %>.
</p>
