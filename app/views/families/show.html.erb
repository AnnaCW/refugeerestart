<div class="">

  <h1 class="family-heading"><%= @family.nationality.name %> Family of <%= @family.num_people %></h1>

  <div class="tags">
    <% if @family.categories %>
      <% @family.categories.take(2).each do |category| %>
        <%= link_to category.name, category_path(category), class: "btn btn-inverse" %>
      <% end %>
    <% end %>
  </div>

</div>

<h4 class="col-sm-6 details">Arrival Date: <%= @family.arrival_date.to_formatted_s(:long)  %></h4>
<h4 class="col-sm-6 details">Donate by: <%= @family.donation_deadline.to_formatted_s(:long) %></h4>

<div class="profile">

  <div class="col-sm-6 photo">
    <%= image_tag @family.nationality.photo_path %>
    <p> <%=  @family.description %> </p>
  </div>

  <div class="col-sm-4 details">

    <div class="greeting">
      <%= image_tag @family.nationality.greeting %>
      <p>Welcome to America</p>
    </div>

    <div class="learn-more">
      <%= link_to "Learn more about the #{@family.nationality.name} conflict", @family.nationality.info_link %>
    </div>

    <div class="family-info">
        <table class="table">
          <tr><td>Married Adults: <%= @family.num_married_adults %></td>
          <td>Unmarried Adults: <%= @family.num_unmarried_adults %></td></tr>
          <tr><td>Children Over Two: <%= @family.num_children_over_two %></td>
          <td>Children Under Two: <%= @family.num_children_under_two %></td></tr>
        </table>
    </div>

  </div>

</div>

<div class="col-sm-10">

  <h4>Welcome them to the United States.  Donate these items to help them set up their new home.</h4>

  <h5>This family needs a total of <%= number_to_currency @supplies_needed_value %> in donations.</h5>
  <h5><%= number_to_currency @supplies_purchased_value %> has been donated.</h5>
  <div class="progress">
    <div class="progress-bar" role="progressbar" aria-valuemin="0"
        aria-valuemax="100" style="min-width: 2em; width: <%= @percentage_purchased %>%;">
      <%= @percentage_purchased %>%
    </div>
  </div>

  <table class="table">
    <tr>
      <th>Donation Item</th>
      <th>Donation Value</th>
      <th>Quantity</th>
      <th></th>
    </tr>

    <% @family.supply_items.each do |supply_item| %>
    <% if supply_item.quantity_remaining > 0 %>
      <%= form_for supply_item, url: cart_items_path, method: :create do |f| %>
        <div class='<%= supply_item.name %>' >
        <tr>
          <td><%= supply_item.name %></br>
          <em><%= supply_item.description %></em></td>
          <td><%= number_to_currency supply_item.value %></td>
          <td><%= f.hidden_field :id, :value => supply_item.id %>
            <div class="form-group">
              <%= f.select(:quantity, (1..supply_item.quantity_remaining), { :prompt => '0'}, { class: 'form-control' }) %>
            </div>
          </td>
          <td><%= f.submit 'add to cart', class: "btn btn-warning"%></td>
        </tr>
        </div>
      <% end %>
      <% end %>
    <% end  %>
  </table>

</div>
