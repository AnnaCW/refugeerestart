<h2><%= current_user.username %>'s Donations</h2>
<p>Total Donations: <%= @donations.count %> </p>

<table>
  <tr>
    <th>Donation ID:</th>
    <th>Placed on:</th>
    <th>Benefitting Families:</th>
    <th>Donation Items:</th>
  </tr>
  <% @donations.each do |donation| %>
    <tr>
      <td> <%= donation.id %></td>
      <td> <%= donation.created_at.to_date %></td>
      <td>
      <% donation.donation_items.each do |donation_item| %>
        <%= donation_item.supply_item.family.nationality.name %> family of <%= donation_item.supply_item.family.num_people %></br>
      <% end %>
      </td>
      <td>
      <% donation.donation_items.each do |donation_item| %>
          <%= donation_item.quantity %>
          <%= donation_item.supply_item.supply.name %></br>
      <% end %>
      </td>
    </tr>
  <% end %>


</table>
