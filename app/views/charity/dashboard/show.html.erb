<h1>Admin Dashboard</h1>

<%= link_to "See my donations", donations_path, class: "btn btn-warning" %>

<%= link_to "Update my profile", edit_user_path(current_user), class: "btn btn-warning" %>

<% if current_user.charity_admin?  %>
  <% if current_charity %>
    <div class = "charity-admin-charity">
      <h2> <%= current_charity.name %> <h2>
        <%= link_to "Update Charity", edit_charity_path(current_charity), class: "btn btn-warning" %>
    </div>
  <% end %>
      <%= link_to "All Families", admin_families_path, class: "btn btn-warning" %>
      <%= link_to "Create a New Family", new_admin_family_path, class: "btn btn-primary" %>
<% end %>
<div class="details">
  <% if current_charity %>
    <h2>Administrators for <%= current_charity.name %></h2>
  <% else %>
    <h2>All Charity Administrators</h2>
  <% end %>
</div>

<div class="search-font filter">
    <label>Filter By Username  </label>
    <input type="text" placeholder="Username" id="user_filter_username">
</div>

<div class="box">
  <%= link_to "Create New Admin", new_admin_user_path, class: "btn button-indigo" %>
</div>

<div class="col-sm-12 col-sm-offset-1 users">
  <% @admins.each do |admin| %>
    <div data-username="<%= admin.username %>"class="form-box col-sm-5 user">
      <div class="white-texxt">
        <%= admin.username %>,
        <%= current_charity.name %>
      </div>
      <div>
        <%= form_for [:admin, admin], multipart: true do |f|  %>
          <div class="form-group">
            <%= f.label :username %>
            <%= f.text_field :username, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :cell %>
            <%= f.telephone_field :cell, class: "form-control" %>
          </div>

        <%= f.submit "Update Admin", class: "btn btn-info active" %>
        <% end %>
        <%= button_to "Remove Admin Status", admin_user_path(admin), method: :delete, class: "btn btn-warning active" %>
      </div>
    </div>
  <% end %>
</div>
