      <%= image_tag "cover_syria.jpeg", class:"img-responsive" %>
      <figcaption></br></figcaption>
    </div>

    <div class="tweets-div col-sm-3">
      <h2 class="tweet-heading">Latest from UNHCR</h2>
      <%= image_tag "twitter_logo.png", class:"twitter-image" %>
      <% @tweets.each do |tweet|  %>
      <blockquote class="tweet"><%= parsed_tweet tweet%></blockquote>
      <% end %>
      <%= button_to "Follow UNHCR on Twitter", 'https://twitter.com/Refugees', class: "twitter-button btn btn-primary" %>
    </div>
  </div>
